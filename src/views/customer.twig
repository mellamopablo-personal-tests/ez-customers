{% extends 'partials/layout.twig' %}

{% block content %}

    <h2>Editar cliente: {{ customer.first_name }} {{ customer.last_names }}</h2>

    <form action="/customers/{{ customer.id }}" method="post">

        <input type="hidden" name="__method_override__" value="PUT"/>

        <label for="dni">DNI:</label>
        <input type="text"
               id="dni"
               name="dni"
               value="{{ customer.dni }}"
               {% if user.is_read_only %}disabled{% endif %}>

        <br/>

        <label for="first_name">Nombre:</label>
        <input type="text"
               id="first_name"
               name="first_name"
               value="{{ customer.first_name }}"
               required
               {% if user.is_read_only %}disabled{% endif %}>

        <br/>

        <label for="last_names">Apellidos:</label>
        <input type="text"
               id="last_names"
               name="last_names"
               value="{{ customer.last_names }}"
               required
               {% if user.is_read_only %}disabled{% endif %}>

        <br/>

        <label for="email">Email:</label>
        <input type="email"
               id="email"
               name="email"
               value="{{ customer.email }}"
               required
               {% if user.is_read_only %}disabled{% endif %}>

        <br/>

        <label for="birth_date">Fecha de nacimiento:</label>
        <input type="date"
               id="birth_date"
               name="birth_date"
               value="{{ customer.birth_date }}"
               required
               {% if user.is_read_only %}disabled{% endif %}>

        <br/>

        <input type="submit" value="Guardar">

    </form>

    {% include 'partials/errorList.twig' %}

    {% if not user.is_read_only %}
        <ul id="actionList">
            <li>
                <a href="/customers/{{ customer.id }}?__method_override__=DELETE">
                    Eliminar cliente
                </a>
            </li>
        </ul>
    {% endif %}

{% endblock %}
